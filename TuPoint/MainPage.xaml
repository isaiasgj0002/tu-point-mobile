<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TuPoint.MainPage">

    <StackLayout VerticalOptions="CenterAndExpand" Padding="15" BackgroundColor="Orange">
        <!-- Imagen principal -->
        <Image Source="https://tupoint.com/images/sin_fondo.png" 
           Aspect="AspectFit" 
           WidthRequest="200" 
           HeightRequest="200"/>

                <!-- Bienvenida -->
                <Label Text="¡Bienvenido a Tu Point!" 
           HorizontalOptions="CenterAndExpand" 
           FontSize="20" 
           FontAttributes="Bold"/>
        <Entry Placeholder="Correo electrónico" Keyboard="Email" x:Name="EmailEntry"/>
        <Entry Placeholder="Contraseña" IsPassword="True" x:Name="PasswordEntry"/>

        <Button Text="Iniciar Sesión" Clicked="OnLoginButtonClicked" BackgroundColor="#007bff" TextColor="White"
        CornerRadius="10" Margin="0, 10, 0, 0"/>

        <Label Text="¿No tienes una cuenta?" HorizontalOptions="Center" Margin="0,10,0,0"/>
        <Button Text="Registrarse" Clicked="OnRegisterButtonClicked" BackgroundColor="#28a745" TextColor="White"
        CornerRadius="10" Margin="0, 10, 0, 0" />
    </StackLayout>

</ContentPage>
