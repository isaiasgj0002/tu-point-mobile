<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TuPoint.Views.Register">
  <ContentView.Content>
        <StackLayout VerticalOptions="CenterAndExpand" Padding="15">
            <Entry Placeholder="Correo electrónico" Keyboard="Email" x:Name="EmailEntry"/>
            <Entry Placeholder="Contraseña" IsPassword="True" x:Name="PasswordEntry"/>

            <Button Text="Iniciar Sesión" />

            <Label Text="¿No tienes una cuenta?" HorizontalOptions="Center" Margin="0,10,0,0"/>
            <Button Text="Registrarse"/>
        </StackLayout>
    </ContentView.Content>
</ContentView>